extends layout

block head
	script(src='/javascripts/jcanvas.min.js')
	script(src='/javascripts/canvas.js')
	script(src='/javascripts/letters.js')

block content
	nav(class="navbar navbar-default navbar-fixed-top")
		div(class="container")
			div(class="navbar-header")
				a(class="navbar-brand" href="#") TextRecog
			div(id="navbar" class="collapse navbar-collapse")
				ul(class="nav navbar-nav")
					li(id="homeTab" class="active")
						a(href="#home") Home 
					li(id="lettersTab")
						a(href="#letters") Letters
					li(id="segmentationTab")
						a(href="#segmentation") Segmentation
					li(id="testTab")
						a(href="#test") Test
	
	div(class="jumbotron")
		div(class="container")
			canvas(
				id="canvas"
				width="100"
				height="100"
			)
				p Looks like your browser doesn't support the canvas API.

			a(
				id="clearBtn"
				href="#" 
				class="btn btn-default"
			) Clear

			a(
				id = "saveBtn"
				href="#" 
				class="btn btn-primary"
			) Save